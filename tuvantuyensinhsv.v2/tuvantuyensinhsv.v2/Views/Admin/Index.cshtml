<h3>Thông số hệ thống</h3>
<hr />
<div class="row">
    <div class="table-responsive">
        <table id="tablesresult" class="table table-striped table-bordered table-hover dataTable no-footer">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th> 
                    <th>Action</th>    
                </tr>
            </thead>
            <tbody>
                @foreach (tuvantuyensinhsv.v2.Models.SystemInformation item in sysinfo)
                {
                    <tr class="gradeA odd">
                        <td>
                           @item.Key
                        </td>
                        <td>
                           @item.value
                        </td>               
                        <td>
                            <button class="" onclick="fresetvalue('@item.Key')">Reset</button>
                            <button onclick="fremovevalue('@item.Key')">Remove</button>
                        </td>         
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('#tablesresult').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]],
            "order": [[3, "desc"]]
        });

        $('#table_truongs').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]]
        });

        $('#table_nganhs').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]]
        });

        $('#table_truongnganhs').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]],
            "order": [[4, "desc"]]
        });

        $('#table_baiviets').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]]
        });

        $('#table_tinhthanhs').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]]
        });
    });

    function fresetvalue(key)
    {
        var check = confirm("Bạn có muốn xóa?");
        if(check)
        {
            $.ajax({
                url: "/Admin/FResetSystem_Value",
                data: { key: key },
                type: "post",
                success: function (html) {
                    alert("OK");
                }
            });
        }        
    }

    function fremovevalue(key)
    {
        var check = confirm("Bạn có muốn xóa?");
        if(check)
        {
            $.ajax({
                url: "/Admin/FRemoveSystem_Value",
                data: { key: key },
                type: "post",
                success: function (html) {
                    alert("OK");
                }
            });
        }        
    }
</script>
