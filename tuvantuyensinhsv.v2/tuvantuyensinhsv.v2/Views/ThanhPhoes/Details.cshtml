@model tuvantuyensinhsv.v2.Models.ThanhPho
<script src="~/Content/js/facebook_comment.js"></script>
<!-- DataTables-->
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

@{
    ViewBag.Title = Model.Ten;
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<br />
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-body" style="padding: 15px; margin-top: 0px; padding-top: 0px; padding-bottom: 0px;">
            <h3 style="margin-top: 10px;">
                Tỉnh/thành phố: @Model.Ten
            </h3>
        </div>
    </div>
</div>
<div class="panel row col-lg-12">
    <div class="panel-body">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#home" data-toggle="tab">Trường</a>
            </li>
            <li>
                <a href="#comments" data-toggle="tab">Comment</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane fade in active" id="home">
                <div class="table-responsive">
                    <div class="dataTables_wrapper form-inline">
                        <table id="tablesresult" class="table table-striped table-bordered table-hover dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>Trường</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Truongs.Count() != 0)
                                {
                                    foreach (var item in Model.Truongs)
                                    {
                                <tr>
                                    <th> <a href="/Truongs/Details/@item.MaTruong">@item.Ten</a> </th>
                                </tr>
                                    }
                                }
                                else
                                {
                                <tr>
                                    <p>Chưa có thông tin</p>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="comments" style="width:100%;">
                <div id="fb-root"></div>
                <div class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-width="100%" data-numposts="10" data-colorscheme="light"></div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tablesresult').DataTable({
            "aLengthMenu": [[20, 25, 50, -1], [20, 25, 50, "All"]]
        });
    });
</script>
