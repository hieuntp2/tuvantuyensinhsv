@model IEnumerable<WebApplication1.Models.Metadata.SearchKeyResult>

@{
    ViewBag.Title = "Tìm kiếm";
    int nam = DateTime.Now.Year - 1;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">
<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

<style>
    .tablesearch {
        background-color: #E4F5F8;
        border: 1px solid #C0DEED;
    }

        .tablesearch a {
            text-decoration: none !important;
        }
</style>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Từ khóa: @ViewBag.Key</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
    <div class="dataTables_wrapper form-inline">
        <table id="tablesresult" class="table table-striped table-bordered table-hover dataTable no-footer">
            <thead>
                <tr>
                    <th>Tỉnh/Thành</th>
                    <th>Trường</th>
                    <th>Ngành</th>
                    <th>Điểm @nam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr class="gradeA odd">
                        <td class="sorting_1">
                            @if (item.IDThangPho != 0)
                            {
                                <a href="/ThanhPhoes/Details?ID=@item.IDThangPho">@item.TinhThanh</a>
                            }
                        </td>
                        <td class=" ">
                            @if (item.MaTruong != null)
                            {
                                <a href="/Truongs/Details?ID=@item.MaTruong">@item.TenTruong</a>
                            }
                        </td>
                        <td class=" ">
                            @if (item.MaNganh != null)
                            {
                                <a href="/Nganhs/Details?ID=@item.MaNganh">@item.TenNganh</a>
                            }
                        </td>
                        <td class="center ">
                            @if (item.Diem == 0)
                            {
                                <p>-1 (Chưa cập nhật)</p>
                            }
                            else
                            {
                                <p>@item.Diem</p>
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
   
</div>

<!-- Custom Theme JavaScript -->
<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {      
        $('#tablesresult').DataTable();       
    });
</script>
