@model IEnumerable<tuvantuyensinhsv.v2.Models.Question>
@{
    ViewBag.Title = "Thảo luận - Hỏi đáp";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>


<div class="panel panel-default">
    <div class="panel-body">
        <a style="float:right;" class="btn btn-primary" href="/Questions/Create">Tạo câu hỏi</a>
        <h2>Thảo luận</h2>        
        <hr />
        <table id="tablesresult" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Người đăng</th>
                    <th>Ngày đăng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <a href="/Questions/Details/@item.id">@item.Tieude</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Ngaydang)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('#tablesresult').DataTable({
            "aLengthMenu": [[50, 100, -1], [50, 100, "All"]]
        });
    });
</script>